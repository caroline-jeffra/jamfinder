<div class="card-mb my-2">
    <div class="d-flex flex-row justify-content-between">
      <div class="user-info-avatar-mb ps-2 col-4">
        <%= image_tag user.avatar_url, alt: "avatar image of #{user.display_name}", class:"rounded-circle border border-3"%>
      </div>
      <div class="user-headline-mb d-flex align-items-center justify-content-center col-8">
        <div>
          <h3><%= user.display_name %></h3>
          <p class="highlighted"><%= user.address.split.last %></p>
        </div>
      </div>
    </div>
    <div class="d-flex flex-row align-self-center">
      <p class="tag py-3"><%= user.tagline %></p>
    </div>
    <div class="d-flex flex-row icons-align py-3">
        <% user.categories_icons.each do |cloudinary_id| %>
          <i><%= image_tag("#{cloudinary_id}.png", width: 42, height: 42, crop: :fill) %></i>
        <% end %>
    </div>
</div>
