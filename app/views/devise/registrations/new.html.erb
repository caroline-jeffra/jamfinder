<div class="scrollable container">
  <h2>Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
        label: false,
        placeholder: "Email",
        required: true,
        autofocus: true,
        input_html: { autocomplete: "email" }%>
      <%= f.input :password,
        label: false,
        placeholder: "Password",
        required: true,
        input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
        label: false,
        placeholder: "Confirm password",
        required: true,
        input_html: { autocomplete: "new-password" } %>
      <%= f.input :first_name,
        label: false,
        placeholder: "First name",
        required: true,
        input_html: { autocomplete: "given-name" } %>
      <%= f.input :last_name,
        label: false,
        placeholder: "Last name",
        required: true,
        input_html: { autocomplete: "family-name" } %>
      <%= f.input :address,
        label: false,
        placeholder: "Address",
        required: true,
        input_html: { autocomplete: "family-name" } %>
  </div>

  <div class="form-actions d-flex justify-content-center">
    <%= f.button :submit, "Submit", class: "btn btn-primary mb-4 btn-def-width" %>
  </div>
  <% end %>
  <div class="form-actions d-flex flex-column container align-items-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
<%= render 'shared/footer' %>
