<%= turbo_frame_tag "chatbox", class: "col-12 chatbox d-flex flex-column h-100 flex-grow-1 d-none", data: { chats_target: "chatbox", action: "turbo:frame-load->chats#toggle" } do %>
  <div class="card chatroom">
    <div class="card-header message-header d-flex align-items-center">
      <i class="fa-solid fa-arrow-left" style="color: #A40055; font-size: 2.8rem; margin-right: 1.8rem;" data-action="click->chats#toggle"></i>
      <%= link_to(image_tag(@recipient.avatar_url, class: "avatar", style: "align-self: center; margin-right: 2rem"), profile_path(@recipient), data: { turbo_frame: "_top" }) %>
      <h3  class="flex-grow-1"style="margin-bottom: 0;"> <%= truncate(@recipient.display_name, length: 17) %></h3>
      <div data-controller="toggle">
        <button data-action="click->toggle#fire" class="btn btn-make-jam"><h2>+j</h2></button>
        <div id="myModal" class="jam-modal d-none" data-toggle-target="togglableElement">
          <!-- Modal content -->
          <div class="modal-content">
            <button class="btn close fa-solid fa-xmark" style="color: #000000;" data-action="click->toggle#fire"></button>
            <%= render "chatrooms/scheduler", jam: @jam, participants: @chatroom.users.pluck(:id) %>
          </div>
        </div>
      </div>
    </div>
    <%= turbo_stream_from dom_id(@chatroom) %>
    <%= tag.div id: "messages", class:"card-body messages flex-grow-1", data: { chats_target: "messages" } do %>
      <%= render @messages %>
    <% end %>
    <div class="card-footer message-input px-2">
      <%= form_for :message, url: messages_path, html: { class: "d-flex mr-2", data: { action: "turbo:submit-end->chats#reset" } } do |f| %>
        <%= hidden_field_tag "message[chatroom_id]", "#{@chatroom.id}" %>
        <%= f.text_field :content, class: "form-control mx-2" %>
        <%= f.submit "Send", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
<% end %>
