<div class="title-center background-primary py-3">
  <%= link_to "Profile", profile_path(current_user), class: "btn btn-outline-primary col-4 me-5" %>
  <%= link_to "Jams", dashboard_path, class: "btn btn-primary col-4 me-5" %>
</div>
<div class="card my-2">
  <div class="card-upper">
    <div class="card-img-top" style="background-image: linear-gradient(to bottom, rgba(255,255,255,0), rgba(255,255,255,1)), url('<%= image_path @user.banner_url %>');">
    </div>
    <div class="d-flex flex-row space-between">
      <div class="user-info-avatar ps-2">
        <%= image_tag @user.avatar_url, alt: "avatar image of #{@user.display_name}", class:"rounded-circle border border-3"%>
      </div>
      <div class="user-headline ps-5">
        <h3><%= @user.display_name %></h3>
      </div>
    </div>
  </div>
</div>

<div class="month-units">
  <% @months.each do |month| %>
    <h1><%= month %></h1>
      <% @jams.each do |jam| %>
        <% if jam.date.mon == month %>
          <div>
            <%= render 'jam_info', jam: jam %>
          </div>
        <% end %>
      <% end %>
  <% end %>
</div>
