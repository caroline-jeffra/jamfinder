<div class="jam-card d-flex flex-row justify-content-center ">
  <div class="jam-day align-items-center">
    <h2><%= jam.date.mday %></h2>
  </div>
  <div class="jam-info d-flex flex-column">
    <div class="jam-participant">
      <p>Jam with <%= jam.users.last.display_name %></p>
    </div>
    <div class="jam-details d-flex flex-row">
      <div class="jam-time"><p><%= jam.date.hour %>:<%= jam.date.min %></p></div>
      <div class="jam-place"><p>Amsterdam</p></div>
    </div>
  </div>
</div>
