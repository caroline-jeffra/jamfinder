
<div class="scrollable">
  <div  class="landing-splash d-flex flex-column justify-content-center align-items-center"
        style="background-image: url('http://res.cloudinary.com/drxcsc3ye/image/upload/v1693476762/purple_background.png');
              background-repeat: no-repeat;
              background-size:cover;">
    <div class="landing-offset d-flex flex-column align-items-center justify-content-center">
      <h1 class="me-5 text-pale">Play different.</h1>
      <h1 class="ms-5 text-pale">Play together.</h1>
    </div>
    <div>
      <%= render 'layouts/search_form' %>
    </div>
  </div>
  <div class="container pt-4">
    <hr class="py-2">
    <div class="title-center">
      <h1>local jamsters</h1>
    </div>
    <% @profiles.each do |profile| %>
      <%= link_to profile_path(profile) do %>
        <%= render "layouts/user_summary", user: profile %>
      <% end %>
    <% end %>
  </div>
</div>
